---
//@ts-nocheck
// tjekker ikke for notescript fejl så
import "../styles/style.css";
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
import DjPoolSingle from "../components/DjPoolSingle.astro";
import DjPoolFiller from "../components/DjPoolFiller.astro";
import Footer from "../components/Footer.astro";
import djpool1 from "../assets/dj-pool-01.webp";
---

<Layout title="DJ POOL">
  <main class="grid">
    <Menu color="yellow" />
    <section class="grid">
      <h1>DJ POOL</h1>
      <h2>
        TAKE A DIVE INTO THE POOL OF DJ'S THAT HAVE PLAYED OUR EVENTS AND
        TEACHED OUR WORKSHOPS
      </h2>
      <div class="grid djpoolgrid">
        <DjPoolSingle djname="dj ratz" img="/img/dj-pool-09.webp" />
        <DjPoolSingle djname="dj greatfruit" img="/img/dj-pool-11.webp" />
        <DjPoolSingle djname="sandy p" img="/img/dj-pool-10.webp" />
        <DjPoolSingle djname="lavv" img="/img/dj-pool-01.webp" />
        <DjPoolSingle djname="ei.vn" img="/img/dj-pool-02.webp" />
        <DjPoolFiller
          text="WANT TO BE A PART OF THE POOL? SUMBIT TO  THE OPEN CALL"
          link="HERE"
        />
        <DjPoolSingle djname="califano" img="/img/dj-pool-03.webp" />
        <DjPoolSingle djname="minhi" img="/img/dj-pool-04.webp" />
        <DjPoolSingle djname="stacy's gf" img="/img/dj-pool-08.webp" />
        <DjPoolSingle djname="gæo" img="/img/dj-pool-07.webp" />
        <DjPoolFiller
          text="WE CONNECT ASPIRING ARTISTS WITH DIFFERENT OPPORTUNITIES"
        />
        <DjPoolSingle djname="eli moore" img="/img/dj-pool-06.webp" />
      </div>
    </section>
    <Footer background="blue" />
  </main>
</Layout>

<style>
  section {
    justify-self: center;
    grid-column: 1/2;
    grid-row: 1/2;
    margin-bottom: 80px;
  }
  h1 {
    color: var(--orange);
    font-size: 40px;
    grid-column: 1/2;
    grid-row: 1/2;
    margin-top: 30px;
  }
  h2 {
    color: var(--white);
    grid-column: 1/2;
    grid-row: 2/3;
    margin-bottom: 30px;
    max-width: 390px;
  }
  .djpoolgrid {
    width: 270px;
    grid-column: 1/2;
    grid-row: 3/4;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: min-content;
    justify-self: center;
    gap: 10px;
    margin: 10px;
  }

  @media (min-width: 550px) {
    section {
      width: auto;
    }
    h1 {
      justify-self: center;
      font-size: 50px;
    }
    h2 {
      justify-self: center;
      padding: 0 20px;
      max-width: 540px;
    }
    .djpoolgrid {
      width: auto;
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: min-content;
      justify-self: center;
      gap: 10px;
      margin: 10px;
    }
  }
  @media (min-width: 800px) {
    h1 {
      width: auto;
      font-size: 60px;
      margin-top: -20px;
      justify-self: center;
    }
    h2 {
      max-width: 800px;
      justify-self: center;
      margin-bottom: 80px;
      font-size: 18px;
    }
  }
  @media (min-width: 1100px) {
    h1 {
      width: auto;
      font-size: 100px;
      margin-top: -25px;
      justify-self: center;
    }
    h2 {
      max-width: 1100px;
      justify-self: center;
      margin-bottom: 100px;
      font-size: 22px;
    }
  }
</style>
