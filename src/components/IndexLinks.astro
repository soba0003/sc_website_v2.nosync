---
import logo from "../assets/logo.svg";
import star from "../assets/star.svg";
---

<section class="grid">
  <img id="logo" src={logo.src} alt="soundconnects logo" />
  <article class="grid">
    <a class="noline gridcenter events" href="events">events</a>
    <img class="star gridcenter star1" src={star.src} alt="yellow stjerne" />
    <a class="noline gridcenter about" href="about">about</a>
    <img class="star star2 gridcenter" src={star.src} alt="yellow stjerne" />
    <a class="noline gridcenter djpool" href="dj-pool">dj pool</a>
    <img class="star star3 gridcenter" src={star.src} alt="yellow stjerne" />
    <a class="noline contact gridcenter" href="#">contact</a>
    <img class="star star4 gridcenter" src={star.src} alt="yellow stjerne" />
    <a class="noline opendjcall" href="open-call">open dj call</a>
    <img class="star star5 gridcenter" src={star.src} alt="yellow stjerne" />
  </article>
</section>

<style>
  section {
    grid-template-columns: 1fr;
    grid-template-rows: 1;
    grid-column: 1/2;
    grid-row: 1/2;
  }
  #logo {
    width: 130px;
    height: auto;
    grid-column: 1/2;
    grid-row: 1/2;
    place-self: center;
  }
  article {
    grid-column: 1/2;
    grid-row: 1/2;
    place-self: center;
    grid-template-columns: 30px 30px 30px 30px 30px 30px 30px 30px 30px;
    grid-template-rows: 30px 30px 30px 30px 30px 30px 30px;
  }
  a {
    font-family: "Jersey 25", sans-serif;
    color: var(--white);
    font-size: 28px;
    text-align: center;
  }
  a:hover {
    color: var(--orange);
  }
  a:visited {
    color: var(--orange);
  }
  .star {
    width: 18px;
    height: auto;
  }
  .events {
    grid-column: 2/5;
    grid-row: 1/2;
  }
  .about {
    grid-column: 7/10;
    grid-row: 2/3;
  }
  .djpool {
    grid-column: 7/9;
    grid-row: 4/6;
  }
  .contact {
    grid-column: 3/7;
    grid-row: 7/8;
  }
  .opendjcall {
    grid-column: 1/4;
    grid-row: 4/6;
  }
  .star1 {
    grid-column: 6/7;
    grid-row: 1/2;
  }
  .star2 {
    grid-column: 8/9;
    grid-row: 3/4;
  }
  .star3 {
    grid-column: 7/8;
    grid-row: 7/8;
  }
  .star4 {
    grid-column: 2/3;
    grid-row: 6/7;
  }
  .star5 {
    grid-column: 1/2;
    grid-row: 2/3;
  }
</style>
