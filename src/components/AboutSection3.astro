---
import sc8 from "../assets/SC-08.webp";
import sc10 from "../assets/SC-10.webp";
import sc7 from "../assets/SC-07.webp";
---

<section class="grid">
  <article class="grid">
    <h3>SOUND CONNECTS IS A COLLECTIVE AIMING FOR COMMUNITY AND OPPORTUNITY</h3>
    <div class="grid">
      <img class="img1" src={sc10.src} alt="" />
      <img class="img2" src={sc8.src} alt="" />
      <img class="img3" src={sc7.src} alt="" />
    </div>
  </article>
</section>

<style>
  section {
    padding-top: 100px;
    padding-bottom: 100px;
  }
  h3 {
    grid-column: 1/2;
    grid-row: 1/2;
    z-index: 10;
    color: var(--pink);
    font-size: 16cqw;
    text-align: justify;
    line-height: 95px;
  }
  div {
    grid-column: 1/2;
    grid-row: 1/2;
    z-index: 1;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr 1fr;
  }
  img {
    width: 80px;
    height: auto;
  }
  .img1 {
    grid-column: 2/3;
    grid-row: 1/2;
    justify-self: end;
  }
  .img2 {
    grid-column: 1/2;
    grid-row: 2/3;
    margin-left: 10px;
  }
  .img3 {
    grid-column: 2/3;
    grid-row: 4/5;
    justify-self: center;
  }
  @media (min-width: 700px) {
    section {
      padding-top: 200px;
      padding-bottom: 20px;
    }
    article {
      width: 740px;
      justify-self: center;
    }
    h3 {
      font-size: 100px;
      text-align: justify;
      line-height: 110px;
    }
    img {
      width: 150px;
      height: auto;
    }
    .img1 {
      grid-column: 2/3;
      grid-row: 1/2;
      justify-self: end;
    }
    .img2 {
      grid-column: 1/2;
      grid-row: 1/3;
      margin-left: 50px;
      align-self: center;
    }
    .img3 {
      grid-row: 3/4;
    }
  }
</style>
