---
const { h4 } = Astro.props;
import djpooldoodle from "../assets/dj-pool-doodle.svg";
import arrow1 from "../assets/arrow1.svg";
---

<div class="grid dipbox">
  <h4>{h4}</h4>
  <img class="arrow" src={arrow1.src} alt="arrow pointing down" />
  <div class="grid poolbox">
    <a class="gridcenter noline" href="../dj-pool">DJ POOL</a>
    <img class="gridcenter doodle" src={djpooldoodle.src} alt="yellow doodle" />
  </div>
</div>

<style>
  h4,
  a {
    color: var(--white);
  }
  h4 {
    font-size: 16px;
    font-weight: 400;
    grid-column: 1/2;
    grid-row: 1/2;
    margin-left: 20px;
  }
  a {
    font-family: "Inconsolata", monospace;
    font-weight: 500;
    font-size: 45px;
    grid-column: 1/2;
    grid-row: 1/2;
    z-index: 10;
  }
  a:hover {
    font-weight: 700;
  }
  .dipbox {
    width: 220px;
    height: 140px;
    grid-column: 1/3;
    grid-row: 4/5;
    place-self: end;
  }
  .arrow {
    height: 50px;
    width: auto;
    grid-column: 1/2;
    grid-row: 2/3;
    place-self: center;
  }
  .poolbox {
    width: 190px;
    height: auto;
    grid-column: 1/2;
    grid-row: 3/4;
    place-self: end;
  }
  .doodle {
    width: 190px;
    height: auto;
    grid-column: 1/2;
    grid-row: 1/2;
    z-index: 1;
  }
  @media (min-width: 1000px) {
    h4 {
      font-size: 25px;
    }
    a {
      font-size: 60px;
    }
    .dipbox {
      width: 340px;
      height: 140px;
    }
    .poolbox {
      width: 250px;
      height: auto;
      grid-column: 1/2;
      grid-row: 3/4;
      place-self: end;
    }
    .arrow {
      height: 60px;
      width: auto;
    }
    .doodle {
      width: 250px;
      height: auto;
    }
  }
</style>
