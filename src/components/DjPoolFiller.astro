---
const { text } = Astro.props;
const { link } = Astro.props;
---

<div class="grid">
  <p>
    {text}
    <a class="noline link" href="#">{link}</a>
  </p>
</div>

<style>
  div {
    background-color: var(--orange);
    padding: 4px;
    aspect-ratio: 3/4;
    width: 120px;
    height: auto;
  }
  p {
    color: var(--white);
    line-height: 120%;
    place-self: center;
  }
  .link {
    color: var(--white);
    font-weight: 900;
  }
  @media (min-width: 800px) {
    div {
      width: 190px;
      height: auto;
    }
    p {
      padding-right: 10px;
    }
  }
  @media (min-width: 1100px) {
    div {
      width: 250px;
      height: auto;
    }
    p {
      font-size: 18px;
    }
  }
</style>
